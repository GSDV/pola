{
  "expo": {
    "name": "Pola Video",
    "slug": "Pola",
    "owner": "gabsdv",
    "scheme": "gsdv-pola",
    "version": "5.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
        "infoPlist": {
            "NSCameraUsageDescription": "Allow \"Pola\" to access to your camera if you want to record videos through the app.",
            "NSMicrophoneUsageDescription": "Allow \"Pola\" to access to your microphone if you want to record videos through the app.",
            "NSPhotoLibraryAddUsageDescription": "\"Pola\" needs to save photos so it can save the stitched video to your photo library.",
            "NSPhotoLibraryUsageDescription": "\"Pola\" needs access your photo NSPhotoLibraryAddUsageDescription to allow you to upload videos."
        },
        "supportsTablet": true,
        "bundleIdentifier": "me.gsdv.Pola",
        "buildNumber": "5.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "me.gsdv.Pola"
    },
    "plugins": [
        [
          "expo-build-properties",
          {
            "android": {
              "compileSdkVersion": 31,
              "targetSdkVersion": 31,
              "minSdkVersion": 24,
              "buildToolsVersion": "31.0.0",
              "packagingOptions": {
                "pickFirst": [
                  "lib/arm64-v8a/libc++_shared.so",
                  "lib/armeabi-v7a/libc++_shared.so",
                  "lib/x86/libc++_shared.so",
                  "lib/x86_64/libc++_shared.so"
                ]
              }
            },
            "ios": {
              "deploymentTarget": "13.0"
            }
          }
        ]
    ],
    "extra": {
        "eas": {
            "projectId": "9c339c02-9d64-4c1b-ae83-b31ac496135f"
        }
    }
  }
}
